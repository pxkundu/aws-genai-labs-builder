# GenAI Customer Service Development Environment Configuration

# Application Configuration
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=dev-secret-key-change-in-production

# API Configuration
API_V1_STR=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# AWS GenAI Services
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_REGION=us-east-1

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=customer_service

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=genai-cs-dev

# S3 Configuration
S3_BUCKET=genai-cs-dev-bucket
S3_REGION=us-east-1

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://dev-opensearch-endpoint.com
OPENSEARCH_INDEX=knowledge-base-dev

# AI Configuration
MAX_TOKENS=2000
TEMPERATURE=0.7
CONFIDENCE_THRESHOLD=0.8
ESCALATION_THRESHOLD=0.6

# Voice AI Configuration
TRANSCRIBE_LANGUAGE=en-US
POLLY_VOICE_ID=Joanna
POLLY_ENGINE=neural

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=json
